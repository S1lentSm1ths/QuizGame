<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/date_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_time_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="This is date and time"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/date_time_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/between_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="|"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/date_time_data"
        app:layout_constraintEnd_toStartOf="@id/stats_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stats_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Result:"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/date_time_data"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stats_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="This is your score"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/stats_text"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>